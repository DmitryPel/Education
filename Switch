let num = +prompt ('Введите число от 0 до 3');
switch (num) {
    case 0:
        alert ('Вы ввели число 0');
        break;
    case 1:
        alert ('Вы ввели число 1');
        break;
    case 2:
        alert ('Вы ввели число 2');
        break;
    case 3:
        alert ('Вы ввели число 3');
        break;
    default: 
        alert ('Вы ввели неизвестное значение');
}
